<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/four_dp"
    tools:context=".eCommerce.fragmentsUi.FormulatedDetails">

    <include
        layout="@layout/ec_include_ingredient_pack_content"/>

    <com.google.android.material.card.MaterialCardView
        style="@style/ripple_effect"
        app:elevation="@dimen/eight_dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="@dimen/four_dp"
        android:layout_gravity="center"
        app:contentPadding="@dimen/four_dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:drawablePadding="@dimen/eight_dp"
            android:drawableLeft="@drawable/ic_directions"
            android:padding="@dimen/four_dp"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_feeding_description"
            android:drawableStart="@drawable/ic_directions" />

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginTop="@dimen/four_dp"
        tools:listitem="@layout/ec_item_formulated_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>